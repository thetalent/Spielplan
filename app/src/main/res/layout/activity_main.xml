<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/getTeamNumber" android:visibility="visible">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="411dp"
            android:id="@+id/LfirstStep" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Anzahl Teams"
                android:layout_width="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="16dp" android:layout_height="30dp" android:visibility="visible"/>
        <EditText
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/teamCount"
                android:hint="enter a number" android:drawableTint="#296DA3" android:backgroundTint="#156A91"
                android:layout_marginStart="24dp" android:text="0" android:enabled="true"
                android:clickable="false" android:visibility="visible"/>
        <Button
                android:text="Teams "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inputTeams"
                android:layout_marginStart="80dp" android:layout_marginEnd="8dp"
                android:onClick="getInputFields" android:layout_marginTop="10dp"
                android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:id="@+id/TeamsLayout"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="731dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" android:layout_marginTop="731dp" app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/Plan"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif-condensed"/>
</android.support.constraint.ConstraintLayout>